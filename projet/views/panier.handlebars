<section>
    <h2>Panier</h2>

    <table class="panier">
        <thead {{#if estVide}}class="hidden"{{/if}}>
            <tr>
                <th></th>
                <th>Produit</th>
                <th>Quantite</th>
                <th>Prix</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each livre}}
                <tr data-id-livre="{{this.id_livre}}">
                    {{!-- <td><img src="{{"/"+this.nom_livre+".png"}}" alt="{{this.nom_livre}}"></td> --}}
                    <td class="nom">{{this.nom_livre}}</td>
                    <td class="quantite">{{this.quantite}}</td>
                    <td><input type="button" value="&times;"></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <div class="panier-buttons">
        <input type="button" value="Soumettre" id="soumettre" {{#if estVide}}disabled{{/if}}>
        <input type="button" value="Annuler" id="vider" {{#if estVide}}disabled{{/if}}>
    </div>
</section>

<script type="module" src="../public/js/panier.js"></script>
